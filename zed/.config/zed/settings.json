// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "auto_install_extensions": {
        "caddyfile": true,
        "catppuccin": true,
        "catppuccin-icons": true,
        "codebook": true,
        "dockerfile": true,
        "html": true,
        "lua": true,
        "markdown-oxide": true,
        "mcp-server-context7": true,
        "powershell": true,
        "sql": true,
        "toml": true
    },
    "context_servers": {
        "mcp-server-context7": {
            "enabled": true,
            "settings": {
                "context7_api_key": ""
            }
        }
    },
    "agent": {
        "default_profile": "write",
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-opus-4-5"
        },
        "use_modifier_to_send": true,
        "notify_when_agent_waiting": "all_screens",
        "model_parameters": [],
        "enable_feedback": false
    },
    "languages": {
        "Python": {
            "prettier": {
                "allowed": false
            },
            "indent_guides": {
                "background_coloring": "disabled",
                "coloring": "indent_aware"
            }
        }
    },
    "wsl_connections": [
        {
            "distro_name": "Ubuntu",
            "user": null,
            "projects": [
                {
                    "paths": ["/home/krzysztof/private/ferris-sweep-zmk-config"]
                },
                {
                    "paths": ["/home/krzysztof/work/experiment-service-ui"]
                },
                {
                    "paths": ["/home/krzysztof/work/l1scripts"]
                },
                {
                    "paths": ["/home/krzysztof/work/qcs"]
                }
            ]
        }
    ],
    "git": {
        "inline_blame": {
            "padding": 5
        }
    },
    "collaboration_panel": {
        "dock": "right"
    },
    "git_panel": {
        "dock": "right"
    },
    "outline_panel": {
        "dock": "right"
    },
    "tabs": {
        "show_close_button": "hover",
        "file_icons": true,
        "git_status": true
    },
    "title_bar": {
        "show_menus": false,
        "show_branch_icon": true
    },
    "status_bar": {
        "active_language_button": true
    },
    "project_panel": {
        "dock": "right",
        "button": true
    },
    "prettier": {
        "allowed": true
    },
    "preferred_line_length": 120,
    "relative_line_numbers": "disabled",
    "auto_signature_help": false,
    "cursor_shape": "bar",
    "restore_on_startup": "last_workspace",
    "disable_ai": false,
    "icon_theme": {
        "mode": "system",
        "light": "Catppuccin Latte",
        "dark": "Catppuccin Mocha"
    },
    "terminal": {
        "font_family": "Monaspace Radon",
        "font_fallbacks": ["monospace"]
    },
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "base_keymap": "VSCode",
    "vertical_scroll_margin": 10.0,
    "gutter": {
        "folds": true
    },
    "minimap": {
        "show": "never",
        "thumb": "always"
    },
    "cursor_blink": true,
    "autosave": {
        "after_delay": {
            "milliseconds": 1000
        }
    },
    "buffer_font_fallbacks": ["monospace"],
    "buffer_font_family": "Monaspace Radon",
    "file_types": {
        "json": [".vil"],
        "shellscript": [".bashrc", ".zshrc"],
        "groovy": ["Jenkinsfile*"],
        "dockerfile": ["Dockerfile*"]
    },
    "linked_edits": true,
    "show_whitespaces": "all",
    "show_edit_predictions": false,
    "ensure_final_newline_on_save": true,
    "wrap_guides": [100, 120],
    "soft_wrap": "editor_width",
    "hard_tabs": false,
    "ui_font_size": 16,
    "buffer_font_size": 16.0,
    "theme": {
        "mode": "system",
        "light": "Catppuccin Latte",
        "dark": "Catppuccin Mocha"
    }
}
