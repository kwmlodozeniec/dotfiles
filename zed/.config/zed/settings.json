{
  "agent": {
    "default_model": {
      "model": "claude-opus-4.5",
      "provider": "copilot_chat"
    },
    "default_profile": "write",
    "enable_feedback": false,
    "model_parameters": [],
    "notify_when_agent_waiting": "all_screens",
    "use_modifier_to_send": true
  },
  "agent_servers": {
    "github-copilot": {
      "type": "registry"
    },
    "opencode": {
      "default_config_options": {},
      "default_model": "github-copilot/claude-opus-4.5",
      "favorite_config_option_values": {},
      "favorite_models": [
        "github-copilot/claude-opus-4.5",
        "github-copilot/gemini-3-flash-preview",
        "github-copilot/gemini-3-pro-preview",
        "github-copilot/gpt-5.2-codex"
      ],
      "type": "registry"
    }
  },
  "auto_install_extensions": {
    "caddyfile": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "codebook": true,
    "docker-compose": true,
    "dockerfile": true,
    "html": true,
    "lua": true,
    "markdown-oxide": true,
    "mcp-server-context7": true,
    "powershell": true,
    "sql": true,
    "toml": true
  },
  "auto_signature_help": false,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "base_keymap": "VSCode",
  "buffer_font_fallbacks": ["Symbols Nerd Font Mono", "Apple Color Emoji"],
  "buffer_font_family": "Monaspace Radon",
  "buffer_font_size": 16,
  "collaboration_panel": {
    "dock": "right"
  },
  "colorize_brackets": true,
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": ""
      }
    }
  },
  "cursor_blink": true,
  "cursor_shape": "bar",
  "disable_ai": false,
  "ensure_final_newline_on_save": true,
  "file_scan_exclusions": [
    "**/*.egg*",
    "**/*.pyc",
    "**/.benchmarks",
    "**/.coverage",
    "**/.hypothesis",
    "**/.idea",
    "**/.mypy_cache",
    "**/.pyre*",
    "**/.pytest_cache",
    "**/.ruff_cache",
    "**/.venv",
    "**/RESULTS",
    "**/__pycache__",
    "**/env",
    "**/htmlcov",
    "**/results.xml",
    "**/temp",
    "**/venv"
  ],
  "file_types": {
    "dockerfile": ["Dockerfile*"],
    "groovy": ["Jenkinsfile*"],
    "json": [".vil"],
    "shellscript": [".bashrc", ".zshrc"]
  },
  "git": {
    "inline_blame": {
      "padding": 5
    }
  },
  "git_panel": {
    "dock": "right"
  },
  "gutter": {
    "folds": true
  },
  "hard_tabs": false,
  "helix_mode": false,
  "icon_theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte",
    "mode": "system"
  },
  "languages": {
    "JSON": {
      "tab_size": 2
    },
    "Python": {
      "completions": {
        "words": "fallback"
      },
      "indent_guides": {
        "background_coloring": "disabled",
        "coloring": "indent_aware"
      },
      "inlay_hints": {
        "enabled": true,
        "show_background": false
      },
      "language_servers": [
        "ty",
        "ruff",
        "codebook",
        "!basedpyright",
        "!pyrefly",
        "!pyright",
        "!pylsp"
      ],
      "prettier": {
        "allowed": false
      }
    }
  },
  "linked_edits": true,
  "minimap": {
    "show": "never",
    "thumb": "always"
  },
  "outline_panel": {
    "dock": "right"
  },
  "preferred_line_length": 120,
  "prettier": {
    "allowed": false
  },
  "project_panel": {
    "button": true,
    "dock": "right"
  },
  "relative_line_numbers": "disabled",
  "restore_on_startup": "last_workspace",
  "show_completions_on_input": true,
  "show_edit_predictions": false,
  "show_whitespaces": "all",
  "soft_wrap": "editor_width",
  "status_bar": {
    "active_language_button": true
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_close_button": "hover"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_fallbacks": ["Symbols Nerd Font Mono", "Apple Color Emoji"],
    "font_family": "Monaspace Radon"
  },
  "theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte",
    "mode": "dark"
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_menus": false
  },
  "ui_font_size": 16,
  "vertical_scroll_margin": 10,
  "wrap_guides": [100, 120]
}
